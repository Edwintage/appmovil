<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/respuesta"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="0"
            android:textColor="#4CAF50"
            android:textColorLink="#E91E63"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/numerouno"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:hint="Escribe un numero"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/numerodos"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:hint="Escribe un numero "
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/sumabutton"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#E91E63"
            android:text="suma" />

        <Button
            android:id="@+id/restabutton"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="resta"
            app:icon="@color/black" />

        <Button
            android:id="@+id/multiplicacionbutton"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="multiplicación" />

        <Button
            android:id="@+id/divisionbutton"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="división"
            app:icon="@android:drawable/divider_horizontal_dark" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>